<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>
    <com.liqun.securitymax.view.SettingItemView
        xmlns:securitymax="http://schemas.android.com/apk/res/com.liqun.securitymax"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        securitymax:desTitle="自动更新设置"
        securitymax:desOff="自动更新已关闭"
        securitymax:desOn="自动更新已开启"/>
    <com.liqun.securitymax.view.SettingItemView
        xmlns:securitymax="http://schemas.android.com/apk/res/com.liqun.securitymax"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        securitymax:desTitle="电话归属地显示设置"
        securitymax:desOff="归属地显示已关闭"
        securitymax:desOn="归属地显示已开启"/>
    <com.liqun.securitymax.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>